<Page
    x:Class="Uppgift_2_Kurs_2.Views.ListingFinishedErrands"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:LibaryAccess.Models"
    xmlns:local="using:Uppgift_2_Kurs_2.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <CollectionViewSource x:Name="ErrandCollection" Source="{x:Bind errandView.Errands}"/>
    </Page.Resources>
    <Grid>
        <ListView x:Name="lvObserv" ItemsSource="{Binding Source={StaticResource ErrandCollection}}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Errand">
                    <StackPanel>
                        <TextBlock x:Name="tb" Text="{x:Bind Catagory}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </Grid>
</Page>
